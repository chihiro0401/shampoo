<!DOCTYPE html>
<html>
  <head>
    <title>Shampoo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

 <% if user_signed_in? %>
  <body id="wrapper" style="background-color: rgb(227, 244, 244); font-family: serif; color: #000000;">
    <!--ヘッダー-->
    <div id="header">
        <%= render "layouts/header" %>
    </div>

    <!--body部分-->
    <div class="container" style="margin-top: 20px;">
        <%= yield %>
    </div>

    <!--footer-->
    <div id="footer">
        <%= render "layouts/footer" %>
    </div>
  </body>

  <% else %>
    <body id="wrapper" style="background-color: rgb(210, 233, 233); font-family: serif; color: #000000;">
        <!--header-->
      <div id="header">
        <%=render "layouts/header" %>
      </div>

      <!--body部分-->
      <div class="container" style="margin-top: 20px;">
        <%= yield %>
      </div>

      <!--footer-->
      <div id="footer">
        <%= render "layouts/footer" %>
      </div>
    </body>
  <% end %>

  

</html>
