<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="px-5 py-4">
        <h4>Shampoo新規登録</h4>
      </div>
      <div class="col-11 offset-1">
        <%=form_with model: @shampooitem, url: admin_shampooitems_path, local: true do |f| %>
          <div class="form-group row">
            <%= f.label :シャンプー画像, :placeholder => "ブランド名",class: 'col-md-3'%>
            <%= f.file_field :image, accept: "image/*" %>
          </div>

          <div class="form-group row">
            <%= f.label :ブランド名, class: 'col-md-3'%>
            <%= f.text_field :brandname, :placeholder => "ここに説明文を記述します", class: "form-control col-md-5" %>
          </div>

          <div class="form-group row">
            <%= f.label :コンセプト, class: 'col-md-3'%>
            <%= f.text_area :description, :placeholder => "ここに説明文を記述します", class: 'col-md-5 form-control'%>
          </div>

          <div class="form-group row">
            <%= f.label :税抜価格, class: 'col-md-3'%>
            <%= f.text_field :price, :placeholder => "0", class: 'col-md-5 form-control'%>
            <span>円</span>
          </div>

          <div class="form-group col-2 offset-4 mt-2">
            <%= f.submit '新規登録', class: 'btn btn-success btn-lg' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>