
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="col-11 offset-1">
        <div class="d-flex justify-content-between align-items-center">
          <h4 class="py-3">Shampooitem一覧</h4>
          <div>
            <%= link_to new_admin_shampooitem_path, class: 'btn btn-success' do %>
              新規登録画面
            <% end %>
          </div>
        </div>
        <table class="table">
          <thead>
            <tr class="table-warning">
              <th>ShampooitemID</th>
              <th>Brandname</th>
              <th>税込価格</th>
            </tr>
          </thead>
          <tbody>
            <% @shampooitems.each do |shampooitem| %>
              <tr>
                <td><%= shampooitem.id %></td>
                <td><%= link_to shampooitem.brandname, admin_shampooitem_path(shampooitem.id) %></td>
                <td><%= number_with_delimiter(shampooitem.price.to_i, delimiter: ',') %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>