<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <h2><%= @user.name %>さんの会員情報編集</h2>

    <%= form_with model:@user,url: admin_user_path(@user.id) do |f| %>
      <table class="row table">
        <tr>
          <th class="col-xs-2"><%= f.label :会員ID %></th>
          <td class="col-xs-10"><%= f.text_field :id, class:"form-control" %></td>
        </tr>
        <tr>
          <th class="col-xs-2"><%= f.label :ニックネーム%></th>
          <td class="col-xs-10"><%= f.text_field :name, class:"form-control"  %></td>
        </tr>
        <tr>
          <th class="col-xs-2"><%= f.label :メールアドレス %></th>
          <td class="col-xs-10"><%= f.text_field :email, class:"form-control" %></td>
        </tr>
        <tr>
          <th class="col-xs-2"><%= f.label :会員ステータス %></th>
          <td><%= f.select :is_user_status,[["有効","false"],["退会","true"]], class:"from-control" %></td>
        </tr>
    </table>

        <div class="row text_light">
          <%= f.submit "変更を保存", class:"btn btn-success" %>
        </div>
    <% end %>
  </div>
</div>