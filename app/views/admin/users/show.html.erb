<div class="container">
  <div class="row">
    <div class="col-sm-12 col-xs-offset-1">
      <div class="col-11 offset-1">
        <h2><%= @user.first_name  + @user.last_name %>さんの会員詳細</h2>

        <table class="row table">

            <tr>
              <th class="col-xs-2">会員ID</th>
              <td class="col-xs-10"><%= @user.id %></td>
            </tr>
            <tr>
              <th class="col-xs-2">ニックネーム</th>
              <td class="col-xs-10"><%= @user.name %></td>
            </tr>
            <tr>
              <th class="col-xs-2">メールアドレス</th>
              <td class="col-xs-10"><%= @user.email %></td>
            </tr>
            <tr>
              <th class="col-xs-2">会員ステータス</th>
              <% if @user.is_deleted==false %>
                <td class="col-sm-10 font-weight-bold"><font color="green">有効</td>
              <% else %>
                <td class="col-md-10 font-weight-bold"><font color="gray">退会</td>
              <% end %>
            </tr>
              <th>
                <tr height="40">
                  <th class="col-sm-3"></th>
                  <td class="col-sm-9"><%= link_to "編集する",edit_admin_user_path(@user.id),class:"btn btn-lg btn-success " %>&emsp;<%= link_to "注文履歴一覧を見る",admin_root_path,class:"btn btn-lg btn-primary " %></td>
                </tr>
              </th>
        </table>
      </div>
    </div>
  </div>
</div>