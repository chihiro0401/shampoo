<div class="container">
  <div class="row">
    <div class="col-sm-12 col-xs-offset-1">
      <div class="col-11 offset-1">
      <h2>会員一覧</h2>

      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to admin_user_path(user), admin_user_path(user) %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
                <% if user.is_deleted == false %>
                  <td class="text-success">有効</td>
                <% else %>
                  <td class="text-secondary">退会</td>
                <% end %>
            </tr>
          <% end %>
          <!%= paginete @users %>
        </tbody>
      </table>
    </div>
  </div>
</div>