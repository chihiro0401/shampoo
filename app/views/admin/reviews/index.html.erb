<div calss="container">
  <h2 calss="pagetitle text-center">管理者側ユーザー一覧・不適切なレビュー管理</h2>
  <div class="row">
    <div class="col-6 d-grid gap-2 mx-auto">
      <div class="row">
        <table class='table'>
          <thead>
            <tr>ユーザーID</tr>
            <tr>ニックネーム</tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%=user.id %></td>
              <td><%=link_to admin_review_path(user.id) do %><%= user.name %><% end %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>