<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h2 class="d-inline-block">shampooitem一覧</h2>
    </div>
  </div>
  <div class="row mt-3 text-center text-xs-center text-sm-center text-md-left">
    <% @shampooitems.each do |shampooitem| %>
    <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
      <div class="card w-100 bg-transparent border-0" style="width: 18rem;">
        <%= link_to shampooitem_path(shampooitem) do %>
          <div class="img-wrap" style="margin-bottom: 10px;">
            <%= image_tag(shampooitem.image.presence || "no_image.jpg", width: "100%", height: "200px") %>
          </div>
        <% end %>
        <div class="card-body">
          <p class="product-details product-name card-text"><%= shampooitem.brandname %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
