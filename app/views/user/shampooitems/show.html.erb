<div class="container my-5">
  <div class="row mt-5">
    <div class="col-md-9">
      <div class="row">
        <div class="product_img">
          <% if @shampooitem.image.attached? %>
            <%= image_tag @shampooitem.image, size: "300x200" %>
          <% else %>
            <%= image_tag 'no_image', size: "300x200" %>
          <% end %>
        </div>
        <div class="col-6 ml-md-3">
          <h5 class="mb-1"><%= @shampooitem.brandname %></h5>
          <p class="my-4"><%= @shampooitem.description %></p>
          <div class="row">
            <h5 class="ml-md-3">¥ <%= @shampooitem.price.to_s(:delimited) %></h5>
            <p class="ml-1 d-flex align-items-end">(税込)</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>