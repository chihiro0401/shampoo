<div class="container">
  <div class="row">
    <h4 class="p-4">レビュー詳細</h4>
  </div>

  <div class="row">
    <div class="col-md-3 mt-3">
      <% if @review.image.attached? %>
        <%= image_tag @review.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
      <% end %>
    </div>

    <div class="col-md-8">
      <table class="table table-borderless md-auto">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @product.name %></td>
          </tr>
          <tr>
            <td>使ってみた感想</td>
            <td><%= @product.description %></td>
          </tr>
          <tr>
            <td>カテゴリー</td>
            <td><%= @product.category.name %></td>
          </tr>
          <tr>
            <td>税込価格(税抜価格)</td>
            <td>
              <%= number_with_delimiter((@review.tax_excluded_price * 1.1).to_i, delimiter: ',') %>
              (<%= number_with_delimiter(@review.tax_excluded_price.to_i, delimiter: ',') %>)
              <span>円</span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="text-center">
    <%= link_to "編集する", edit_review_path(@review), class: "btn btn-success" %>
  </div>
</div>