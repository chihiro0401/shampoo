<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="px-5 py-4">
        <h4>レビュー編集</h4>
      </div>
      <div class="col-11 offset-1">
        <%=form_with model: @review, url: admin_product_path(@review), local: true do |f| %>
          <div class="form-group row">
            <%= f.label :商品画像, class: 'col-md-3'%>
            <%= f.file_field :image, accept: "image/*" %>
          </div>

          <div class="form-group row">
            <%= f.label :ブランド名, class: 'col-md-3'%>
            <%= f.text_field :name, :placeholder => "商品名", class: "form-control col-md-5" %>
          </div>

          <div class="form-group row">
            <%= f.label :使ってみた感想, class: 'col-md-3'%>
            <%= f.text_area :description, :placeholder => "ここに説明文を記述します", class: 'col-md-5 form-control'%>
          </div>

          <div class="form-group row">
            <%= f.label :カテゴリー, class: 'col-md-3'%>
            <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "--選択してください"},class: "col-md-5 form-control") %>
          </div>

          <div class="form-group col-2 offset-4 mt-2">
            <%= f.submit '変更を保存', class: 'btn btn-success btn-lg' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>