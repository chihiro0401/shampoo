<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="px-5 py-4">
        <h4>レビュー新規投稿</h4>
      </div>
      <div class="col-11 offset-1">
        <%=form_with model: @review, url: reviews_path, local: true do |f| %>
        <% if @review.errors.any? %>
            <div class="alert alert-danger">
              <h5>エラーが発生しました。</h5>
              <ul>
                <% @review.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group row">
            <%= f.label :参考シャンプー画像, class: 'col-md-3'%>
            <%= f.collection_select(:shampooitem_id, Shampooitem.all, :id, :brandname, {prompt: "--選択してください"},class: "col-md-5 form-control") %>
          </div>

          <div class="form-group row">
            <%= f.label :ブランド名, class: 'col-md-3'%>
            <%= f.text_field :brandname, :placeholder => "ここに商品名を記述します", class: "form-control col-md-5" %>
          </div>

          <div class="form-group row">
            <%= f.label :使ってみた感想, class: 'col-md-3'%>
            <%= f.text_area :description, :placeholder => "ここに感想を記述します", class: 'col-md-5 form-control'%>
          </div>

          <div class="form-group row">
            <%= f.label :カテゴリー, class: 'col-md-3'%>
            <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "--選択してください"},class: "col-md-5 form-control") %>
          </div>


          <div class="form-group col-2 offset-4 mt-2">
            <%= f.submit '新規投稿', class: 'btn btn-success btn-lg' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>